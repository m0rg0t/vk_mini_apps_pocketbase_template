{
  "name": "universal-mini-app-template-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Frontend for Universal VK/Telegram Mini App Template",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite --host 0.0.0.0",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "tunnel": "vk-tunnel --http-protocol=http --host=127.0.0.1 --port=5173",
    "deploy": "vite build && vk-miniapps-deploy",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@tanstack/react-query": "5.81.5",
    "@twa-dev/sdk": "^8.0.2",
    "@vkontakte/icons": "^3.1.1",
    "@vkontakte/vk-bridge": "^2.13.0",
    "@vkontakte/vk-bridge-react": "^1.0.1",
    "@vkontakte/vk-mini-apps-router": "^1.7.6",
    "@vkontakte/vkui": "^7.0.0",
    "pocketbase": "^0.26.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vk-helpers": "^1.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-legacy": "^5.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/ui": "^3.2.2",
    "@vkontakte/vk-miniapps-deploy": "^0.1.6",
    "@vkontakte/vk-tunnel": "^0.2.6",
    "eruda": "^3.0.1",
    "esbuild": "~0.20.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "3.5.3",
    "terser": "^5.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
