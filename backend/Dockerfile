# Use official Node.js image
FROM node:20-alpine
WORKDIR /app
COPY package.json ./
RUN npm install --production
COPY . .
ARG PORT=3000
ENV PORT=$PORT
ARG POCKETBASE_URL
ENV POCKETBASE_URL=$POCKETBASE_URL
ARG POCKETBASE_BEARER_TOKEN
ENV POCKETBASE_BEARER_TOKEN=$POCKETBASE_BEARER_TOKEN
EXPOSE $PORT
CMD ["npm", "start"]
